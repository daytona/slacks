doctype html
html.no-js(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Daytona Chat
    link(rel='stylesheet' href='/style.css')
    link(rel='shortcut icon' href='http://daytona.se/assets/images/favicons/favicon-32x32-6d78d5045465bbe33f41cea4593ce29b.png')
    link(rel='icon' type='image/ico' href='http://daytona.se/assets/images/favicons/favicon-a8398a0b0a81b6d85c71f3a4f7b66c80.ico')
  body



    h1.Logo
      a(href='/') Daytona Chat


    
    .Chat
      form.Chat-form(id='chat-form')
        textarea.Chat-formMessage(id='chat-message', placeholder='Your message...')
        input.Chat-formName(id='chat-username' placeholder='Your name...')
        button.Chat-formSubmit.Button(type='submit') Send



    if posts
      .Blog(id='blog')
        each post in posts
          .Blog-post
            p.Blog-postName #{post.username}
            p.Blog-postMeta #{post.niceDate}
            p.Blog-postBody #{post.body}



    button.Button(id='show-dialog') Info

    dialog.Dialog(id='info-dialog')
      section.
        <h1>This is your gateway directly in to the Daytona Slack chat!</h1>
        <br>
        <h2>Write anything!</h2>
        <p>But be nice!</p>
        <br>
        <h2>How to write:</h2>
        <h3>Links:</h3>
        <p>&lt;http://www.foo.com|foo.com&gt;.</p>
        <h3>Text styles:</h3>
        <p><b>*asterisks*</b> for bold text</p>
        <p><i>_underscores_</i> for italic text</p>
      
      menu
        button.Button(id='close-button') Close



    script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js')
    script(src='/socket.io/socket.io.js')
    script(src='client.js')